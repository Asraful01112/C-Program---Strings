#include <stdio.h>
#include <string.h>

void reverse(char str[], int index) {
    int len = strlen(str);

    if (index == len) {
        return;
    }

    reverse(str, index + 1);
    printf("%c", str[index]);
}

int main() {
    char str[100];

    printf("Enter a string: ");
    scanf("%99s", str);

    printf("Reversed string: ");
    reverse(str, 0);

    return 0;
}
